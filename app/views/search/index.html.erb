<h1> Members <%= @affiliation %></h1>

Total People: <%= @members.count %>

<h2> Members List </h2>

<section class="character">
  <% @members.each do |member| %>
    <img src=<%= member.photo %>><br>
    <p>Name: <%= member.name %></p>

    <% if member.allies.size > 0 %>
      <p>Allies: <%= member.allies.join(', ') %></p>
    <% else %>
      <p>Allies: None</p>
    <% end %>

    <% if member.enemies.size > 0 %>
      <p>Enemies: <%= member.enemies.join(', ') %></p>
    <% else %>
      <p>Enemies: None</p>
    <% end %>

    <p>Affiliations: <%= member.affiliation %></p>
  <% end %>
</section>